title: Alacritty
dynamic_title: true
font:
  normal:
    family: "Sauce Code Pro Nerd Font"
    style: Regular
  bold:
    family: "Sauce Code Pro Nerd Font"
    style: Bold
  italic:
    family: "Sauce Code Pro Nerd Font"
    style: Italic
  bold_italic:
    family: "Sauce Code Pro Nerd Font"
    style: Bold Italic

colors:

  primary:
    background: %clbg%
    foreground: %clfg%

  cursor:
    text: "#000000"
    cursor: "#FFFFFF"

  normal:
    black: %cl0%
    red: %cl1%
    green: %cl2%
    yellow: %cl3%
    blue: %cl4%
    magenta: %cl5%
    cyan: %cl6%
    white: %cl7%
  bright:
    black: %cl8%
    red: %cl9%
    green: %cl10%
    yellow: %cl11%
    blue: %cl12%
    magenta: %cl13%
    cyan: %cl14%
    white: %cl15%

key_bindings:
  - { key: Equals,   mods: Command, action: None}
  - { key: Plus,      mods: Command, action: None}
  - { key: Minus,    mods: Command, action: None}
  - { key: Right,     mods: Alt,      chars: "\x1BF" }
  - { key: Left,      mods: Alt,      chars: "\x1BB" }
